    "travis": "npm test && npm run nyc-coverage"
  },
  "keywords": [],
  "author": "",
  "bin": "./src/cli.js",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "meow": "^5.0.0",
    "nyc": "^11.7.1",
    "pkg": "^4.3.1",
    "xo": "^0.20.3"
  },
  "dependencies": {
    "autoprefixer": "^8.4.1",
    "chalk": "^2.4.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.3",
    "postcss": "^6.0.22",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^2.6.2"
  },
  "xo": {
    "space": true
  },
  "nyc": {
    "include": [
      "./src/app.js"
    ]
